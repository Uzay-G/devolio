<nav>
    <ul>
        <li class="left"><%= image_tag "logo.png", alt: "logo", width: "150", class: "logo" %></li>
        <% if current_user %>
            <li class="right"><%= link_to "Edit Profile", edit_user_path(current_user.id), class: "links" %></li>
            <li class="right"><%= link_to "Logout", :logout, method: :post, class: "links" %></li>
        <% else %>
            <li class="signup-btn right"><%= link_to "Signup", new_user_path, class: "links" %></li>
            <li class="right"><%= link_to "Login", :login, class: "links" %></li>
        <% end %>
    </ul>
</nav>
<div>
<% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
</div>