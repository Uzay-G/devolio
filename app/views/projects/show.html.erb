<%= provide(:title, @project.name) %>
<div class="project">
  <div class="project-mast">
    <div class="project-info">
      <%= render "logo" %>
      <div class="project-text">
        <h1><%= link_to @project.name, @project.url, class: "white-link" %></h1>
        <p><%= @project.description %></p>
        <div class="project-btns">
          <% if @project.source %>
            <a href="<%= @project.source %>" target="_blank" rel="noopener" class="fab fa-github"></a>
          <% end %> 

          <% if @project.user == current_user %>
          <a href="<%= edit_project_path(@project) %>"><%= image_tag "edit.svg" %></a>
          <% end %>
        </div>
      </div>
    </div>

    <ul class="project-tags">
      <p><strong id="followers" class="btn-white"><%= pluralize(@project.followers.count, "followers") %></strong></p>
    </ul>
  </div>
  <div class="project-btns">
    <%= render 'relationships/follow_form', object: @project if current_user %>
  </div>
</div>