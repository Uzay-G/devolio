<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar, class: "avatar" %>
<% elsif !@user.github.blank? %>
    <img src="https://github.com/<%= @user.github %>.png" width="100" height="100"  alt="profile pic" class="avatar">
  <% else %> 
    <svg data-jdenticon-value="<%= @user.username %>" width="80" height="90" class="avatar"></svg>
  <% end %>