<% if user.avatar.attached? %>
  <%= image_tag user.avatar.variant(resize_to_limit: [100, 100]), class: "avatar", alt: "user-avatar" %>
<% elsif !user.github.blank? %>
    <img src="https://github.com/<%= user.github %>.png" width="100" height="100"  alt="profile pic" class="avatar">
  <% else %> 
    <svg data-jdenticon-value="<%= user.username %>" width="100" height="100" class="avatar"></svg>
  <% end %>