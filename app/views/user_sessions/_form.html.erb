<%= form_tag user_sessions_path, :method => :post do %>
    <div class="field">
      <%= label_tag :username %><br />
      <%= text_field_tag :username %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    <%= check_box_tag :remember, params[:remember], true %>
    <%= label_tag :remember %>
    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  <% end %>